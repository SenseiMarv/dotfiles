[core]
	longpaths = true
	pager = delta

[user]
	email = marv.stickel@gmail.com
	name = Marvin Stickel
	signingKey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAILvcGDR6/NM3Q2S3Q44RxruAEtYB6sS6Wc5+wBkApdpt

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[init]
	defaultBranch = main

[commit]
	gpgSign = true

[push]
	autoSetupRemote = true

[tag]
	forceSignAnnotated = true

[interactive]
	diffFilter = delta --color-only

# Use VSCode as default diff and merge tool
[merge]
	tool = vscode
	conflictstyle = diff3
[mergetool "vscode"]
	cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED

[diff]
	tool = vscode
	colorMoved = default
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[alias]
	lg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[url "git@github.com:"]
    insteadOf = https://github.com/

[delta]
	navigate = true
	line-numbers = true
	syntax-theme = OneHalfDark
